<Window x:Class="student.testingFromQariLaptop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DES Decryption" Height="250" Width="400">
    <Grid Margin="10">
        <TextBlock Text="Ciphertext:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="CiphertextTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="0,20,0,0"/>

        <TextBlock Text="Key (8 characters):" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0"/>
        <TextBox Name="KeyTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="0,80,0,0"/>

        <Button Name="DecryptButton" Content="Decrypt" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,120,0,0" Click="DecryptButton_Click"/>

        <TextBlock Text="Plaintext:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,160,0,0"/>
        <TextBox Name="PlaintextTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300" Margin="0,180,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
